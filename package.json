{
  "name": "nobel-laureates-app",
  "version": "0.0.1",
  "description": "Information about the Nobel Prizes and the Nobel Prize Laureates",
  "main": "dist/App.js",
  "scripts": {
    "start:all": "npm install && run-p build:start:express  start:ui",
    "start:all:dev": "npm install && run-p build:start:express:dev  start:ui:dev",
    "build:start:express": "run-s build:express start:express:prod",
    "build:start:express:dev": "run-s install:deps:express  start:express:dev",
    "start:express:prod": "NODE_ENV=production node ./dist/App.js",
    "start:express:dev": "NODE_ENV=development node --require ts-node/register ./src/App.ts",
    "start:ui": "cd ui && npm run start",
    "start:ui:dev": "cd ui && npm run start:dev",
    "build:express": "run-s clean install:deps:express compile",
    "clean": "rimraf ./dist",
    "install:deps:express": "npm install --production",
    "compile": "tsc",
    "test": "jest",
    "audit": "npm audit --production --audit-level=critical",
    "audit:fix": "npm audit fix",
    "lint": "run-s audit lint:src",
    "lint:src": "eslint src test --ext .ts --quiet",
    "lint:src:fix": "eslint src test --fix --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "npm": ">=6.0.0",
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^26.0.24",
    "@types/shortid": "0.0.29",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "acorn": "^8.7.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "jest": "^29.4.3",
    "jest-junit": "^15.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.7.0"
  },
  "dependencies": {
    "axios": "^1.3.3",
    "cookieparser": "^0.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-http-context": "^1.2.4",
    "express-validation": "4.1.0",
    "http-errors": "^1.7.1",
    "http-status": "^1.4.2",
    "node-cache": "5.1.2",
    "pino": "^8.10.0",
    "random-id": "^1.0.4",
    "shortid": "2.2.15",
    "typescript": "^4.6.3",
    "uuid": "^7.0.3"
  }
}
